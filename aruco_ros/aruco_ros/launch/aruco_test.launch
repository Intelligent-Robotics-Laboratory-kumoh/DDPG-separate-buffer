<launch>

<arg name="markerId_center" default="0"/>
<arg name="markerId_leftup" default="1"/>
<arg name="markerId_rightup" default="2"/>
<arg name="markerId_leftdown" default="3"/>
<arg name="markerId_rightdown" default="4"/>
<arg name="markerSize" default="0.05"/> <!-- in meter -->
<arg name="eye" default="left"/>
<arg name="marker_frame" default="marker_frame"/>
<arg name="ref_frame" default=""/> <!-- leave empty and the pose will be published wrt param parent_name -->
<arg name="corner_refinement" default="LINES" /> <!-- NONE, HARRIS, LINES, SUBPIX -->

<node pkg="aruco_ros" type="single" name="aruco_single" respawn="true"><!--add respawn 220504-->
<remap from="/camera_info" to="/iris/camera_red_iris/camera_info" />
<remap from="/image" to="/iris/camera_red_iris/image_raw" />
<param name="image_is_rectified" value="True"/>
<param name="marker_size" value="$(arg markerSize)"/>
<param name="marker_id_center" value="$(arg markerId_center)"/>
<param name="marker_id_leftup" value="$(arg markerId_leftup)"/>
<param name="marker_id_rightup" value="$(arg markerId_rightup)"/>
<param name="marker_id_leftdown" value="$(arg markerId_leftdown)"/>
<param name="marker_id_rightdown" value="$(arg markerId_rightdown)"/>
<param name="reference_frame" value="$(arg ref_frame)"/> <!-- frame in which the marker pose will be refered -->
<param name="camera_frame" value="base_link"/>
<param name="marker_frame" value="$(arg marker_frame)" />
<param name="corner_refinement" value="$(arg corner_refinement)" />
<!--param name="calibration_file" type="string" value="~/.ros/camera_info/camera.yaml"/-->
</node>

<!--node name = "cv_camera_topic" pkg="cv_camera" type="cv_camera_node"/-->
</launch>
